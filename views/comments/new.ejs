<% include ../partials/header %>

    <header class="jumbotron text-center" style="margin-top:2%">

        <h1> Please Add a new comment to
            <%= currCampground.name %>
        </h1>
        <hr style="width: 50%">
        <div style="width: 50%;margin: 0 auto;">
            <div class="card" style="text-center">
                <img class="card-img-top" src="<%= currCampground.image %>" alt="Card image cap">
                <div class="card-body">
                    <form action="/campgrounds/<%= currCampground._id %>/comments" method="POST">



                        <div class="form-group">
                            <label for="description"> <strong>Enter your comment below</strong></label>
                            <textarea class="form-control" id="description" rows="3" name="comment[text]"></textarea>
                        </div>
                        <div class="form-group">
                            <button class="form-control btn btn-success" type="submit">Submit</button>
                        </div>


                    </form>
                    <a href="/campgrounds">Go Back</a>
                </div>
            </div>


        </div>


        <% include ../partials/footer %>