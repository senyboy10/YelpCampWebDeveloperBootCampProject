<% include ../partials/header %>

    <header class="jumbotron text-center" style="margin-top:2%">

        <h4> Edit
            <%= campground.name %>
        </h4>

        <hr style="width: 50%">

        <div style="width: 50%;margin: 0 auto;">

            <div class="card text-center">

                <img class="card-img-top" src="<%= campground.image %>" alt="Card image cap">

                <div class="card-body">
                    <form action="/campgrounds/<%= campground._id %>/comments/<%= comment._id %>?_method=PUT" method="POST">



                        <div class="form-group">
                            <label for="description"> <h2><strong>Edit Comment</strong></h2></label>


                            <textarea class="form-control" rows="3" name="comment[text]"> <%=comment.text %></textarea>
                        </div>
                        <div class="form-group">
                            <button class="form-control btn btn-success" type="submit">Submit</button>
                        </div>


                    </form>

                </div>

            </div>

            <a href="/campgrounds">Go Back</a>
        </div>

    </header>

    <% include ../partials/footer %>