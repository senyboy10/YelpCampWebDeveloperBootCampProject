<% include partials/header %>

    <div class="container">

        <header class="jumbotron text-center" style="margin:5% 0 0 0;">

            <h1> Please Add a New Campground!</h1>
            <hr style="width: 50%">
            <div style="width: 30%;margin: 0 auto;">
                <form action="/campgrounds" method="POST">
                    <div class="form-group">
                        <input class="form-control" type="text" placeholder="Campground Name" name="name">
                    </div>
                    <div class="form-group">
                        <input class="form-control" type="text" placeholder="Image URL" name="image">
                    </div>
                    <div class="form-group">
                        <button class="form-control btn btn-primary" type="submit">Submit</button>
                    </div>

                </form>
            </div>



        </header>
    </div>

    <div class="text-center" style="margin:1% 0 auto">
        <a style="margin:0 auto" class="btn btn-info btn-lg" href="/campgrounds">Go Back To View All Campgrounds </a>
    </div>
    <% include partials/footer %>