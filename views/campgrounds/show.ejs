<% include ../partials/header %>

    <div class="row">
        <div class="col-md-3">
            <p class="lead">YelpCamp</p>
            <div class="list-group">
                <li class="list-group-item active">Info 1</li>
                <li class="list-group-item">Info 2</li>
                <li class="list-group-item">Info 3</li>
            </div>
            <div id="map"></div>
        </div>

        <div class="col-md-9">

            <div class="card mb-3">
                <img class="card-img-top" src="<%= currCampground.image %>" alt=" <%= currCampground.name %>">

                <div class="card-body">
                    <p class="float-right">$10/night</p>
                    <h5 class="card-title">
                        <a href="#">
                            <%= currCampground.name%>
                        </a>

                    </h5>
                    <hr>
                    <p>
                        <%=currCampground.description %>
                    </p>
                    <p><em>Submitted by </em>
                        <%= currCampground.author.username%>
                    </p>

                    <% if ( currentUser &&  currCampground.author.id.equals(currentUser._id)){%>
                        <a class="btn btn-warning btn-md " href="/campgrounds/<%= currCampground._id %>/edit">Edit</a>

                        <form class="delete-form" action="/campgrounds/<%=currCampground._id %>?_method=DELETE" method="POST">
                            <button class="btn btn-danger" type="submit">Delete</a>
                    </form>
                   <% } %>
                        
                

                </div>
            </div>

            <div class="card">
                <div class="card-body">
                    <div class="text-right">
                        <a href="/campgrounds/<%= currCampground._id %>/comments/new" class="btn btn-success">Add a new comment</a>
                    </div>
                    <hr>
                    <div class="row">
                        <% for (var i =0; i < currCampground.comments.length; i++){%>
                            <div class="col-md-12 mb-2">
                                <div class="card">
                                    <div class="card-body">
                                        <div class="float-left">
                                            <p class="card-title">
                                                <strong><%=currCampground.comments[i].author.username%></strong>

                                            </p>
                                            <p class="card-text">
                                                <%-currCampground.comments[i].text%>
                                            </p>
                                            <% if ( currentUser &&  currCampground.comments[i].author.id.equals(currentUser._id)){%>
                                            <a class="btn btn-warning btn-md"
                                                href="/campgrounds/<%= currCampground._id %>/comments/<%=currCampground.comments[i]._id%>/edit">
                                                Edit
                                            </a> 
                                            <form class="delete-form" method="POST" action="/campgrounds/<%= currCampground._id %>/comments/<%=currCampground.comments[i].id %>?_method=DELETE">

                                               
                                                <input type = "submit" class="btn btn-xs btn-danger" value="Delete">
                                            </form>
                                            <%}%>

                </div>

                <div class="float-right">
                    <p>10 days ago!</p>
                </div>
            </div>

        </div>

    </div>
    <%}%>
        </div>



        <hr>



        </div>
        </div>
        <hr>
        <a href="/campgrounds" style="margin: auto auto" class="btn btn-info sm">Go Back</a>
        </div>
        </div>






        <% include ../partials/footer %>