<% include ../partials/header %>
    <div class="container">

        <header class="jumbotron text-center" style="margin:1% 0 0 0;">

            <h1> Edit
                <strong><%= campground.name %></strong>
            </h1>
            <hr style="width: 50%">
            <div style="width: 50%;margin: 0 auto;">
                <form action="/campgrounds/<%=campground._id %>?_method=PUT" method="POST">
                    <div class="form-group">
                        <input class="form-control" type="text" value="<%=campground.name%>" name="campground[name]">
                    </div>
                    <div class="form-group">
                        <input class="form-control" type="text" value="<%=campground.image%>" name="campground[image]">
                    </div>
                    <br>
                    <div class="form-group" style="width: 100%">
                        <label for="description"> <strong>Image Description</strong></label>
                        <textarea class="form-control" id="description" rows="4" name="campground[description]"><%= campground.description%></textarea>
                    </div>
                    <div class="form-group">
                        <button class="form-control btn btn-primary" type="submit">Submit</button>
                    </div>


                </form>
            </div>



        </header>
    </div>

    <div class="text-center" style="margin:1% 0 auto">
        <a style="margin:0 auto" class="btn btn-info btn-md" href="/campgrounds">Go Back To View All Campgrounds </a>
    </div>
    <% include ../partials/footer %>