<% include ../partials/header %>

    <div class="container">

        <header class="jumbotron text-center">
            <h1><i class="fab fa-canadian-maple-leaf"></i>Welcome To YelpCamp!</h1>
            <p>View our our hand-picked campgrounds from all over the world</p>
            <hr class="my-4">
            <a href="/campgrounds/newCampground" class="btn btn-primary btn-lg">Add a New Campground</a>
            
           
            <p>
                <form action="/campgrounds" method="GET" class="form-inline" id="campground-search">
                    <div class="form-group">
                        <input type="text" name="search" placeholder="Campground search..." class="form-control">
                        <button type ="submit" class ="btn btn-outline-primary btn-xs"> search</button>
                    </div>
                </form>
            </p>

        </header>


        <div class="row text-center" id="campground-grid">

            <% for( var i = campgrounds.length-1; i >=0 ; i--){ %>
                <div class=" col-lg-3 col-md-4 col-sm-6 mb-4">
                    <div class="card">

                        <img class="card-img-top" src="<%= campgrounds[i].image %>" alt="<%=campgrounds[i].name %>">
                        <div class="card-body">

                            <h5 class="card-title">
                                <%=campgrounds[i].name %>
                            </h5>
                            <!--Retrieve the id of the current campgound and send it as a Get request-->
                            <a href="/campgrounds/<%= campgrounds[i]._id %>" class="btn btn-outline-primary btn-xs">More info</a>

                        </div>

                    </div>
                </div>
                <%} %>
        </div>

    </div>





    <% include ../partials/footer %>